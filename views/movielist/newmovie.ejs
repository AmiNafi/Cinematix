<%- layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Movie</h1>
        <div class="col-6 offset-3">
            <form action="/movielist" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="movie[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="director">Director</label>
                    <input class="form-control" type="text" id="director" name="movie[director]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="poster"> Image Url(for all movies page) </label>
                    <input class="form-control" type="text" id="poster" name="movie[poster]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="scenesnap"> Image Url(for Single Movie page) </label>
                    <input class="form-control" type="text" id="scenesnap" name="movie[scenesnap]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="genre"> Genres </label>
                    <input class="form-control" type="text" id="genre" name="movie[genre]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="rating"> IMDB Rating </label>
                    <input class="form-control" type="number" step="0.1" id="rating" name="movie[rating]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="summary"> Description </label>
                    <textarea class="form-control" type="text" id="summary" name="movie[summary]"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Movie</button>
                </div>

            </form>
            <a href="/movielist">Back to movie list </a>
        </div>
    </div>