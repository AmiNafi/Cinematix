<%- layout('layouts/boilerplate') %>
    <h1>Edit Movi   e</h1>
    <form action="/movielist/<%=curmovie._id%>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="movie[title]" value="<%= curmovie.title %>">
        </div>
        <div>
            <label for="director">Director</label>
            <input type="text" id="director" name="movie[director]" value="<%= curmovie.director %>">
        </div>
        <button>Update Movie</button>
    </form>
    <a href="/movielist/<%= curmovie._id %>">Back to movie </a>